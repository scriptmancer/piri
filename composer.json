{
    "name": "scriptmancer/piri",
    "description": "A modern, attribute-based PHP router with powerful features for building web applications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Gokhan SARIGUL",
            "role": "Developer",
            "email": "ben@gokhansarigul.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "psr/http-message": "^2.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Piri\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Piri\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 